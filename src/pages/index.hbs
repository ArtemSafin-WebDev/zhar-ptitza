{{#extend "layout"}}
{{#content "main"}}


<section class="intro js-intro">
    <div class="intro__bg">
        <div class="intro__parallax-wrapper">
            <div class="intro__bg-slider">
                <div class="swiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <img src="img/intro/1.jpg" alt="" class="intro__bg-image">
                        </div>
                        <div class="swiper-slide">
                            <img src="img/intro/2.jpg" alt="" class="intro__bg-image">
                        </div>
                        <div class="swiper-slide">
                            <img src="img/intro/3.jpg" alt="" class="intro__bg-image">
                        </div>
                        <div class="swiper-slide">
                            <img src="img/intro/4.jpg" alt="" class="intro__bg-image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="intro__content">
            <div class="intro__content-slider">
                <div class="swiper">
                    <div class="swiper-wrapper">
                        <div class="swiper-slide">
                            <div class="intro__content-slider-card">
                                <img src="img/image-logo.svg" alt="" class="intro__content-slider-card-logo">
                                <h3 class="intro__content-slider-card-title">
                                    Жар-птица
                                </h3>
                                <div class="intro__content-slider-card-text">
                                    <p>
                                        действительно сказочные бани
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-slide">
                            <div class="intro__content-slider-card">
                                <img src="img/image-logo.svg" alt="" class="intro__content-slider-card-logo">
                                <h3 class="intro__content-slider-card-title">
                                    Общественные бани
                                </h3>
                                <div class="intro__content-slider-card-text">
                                    <p>
                                        Мужской и женский разряды с выходом в общую зону
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-slide">
                            <div class="intro__content-slider-card">
                                <img src="img/image-logo.svg" alt="" class="intro__content-slider-card-logo">
                                <h3 class="intro__content-slider-card-title">
                                    Банные апартаменты
                                </h3>
                                <div class="intro__content-slider-card-text">
                                    <p>
                                        Индивидуальные банные апартаменты до 10 гостей
                                        для уединенного отдыха
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="swiper-slide">
                            <div class="intro__content-slider-card">
                                <img src="img/image-logo.svg" alt="" class="intro__content-slider-card-logo">
                                <h3 class="intro__content-slider-card-title">
                                    SPA Услуги
                                </h3>
                                <div class="intro__content-slider-card-text">
                                    <p>
                                        Авторские парения, пилинги, массажи и не только —
                                        с заботой о вашем теле и вниманием к деталям
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="intro__controls">
                <div class="intro__contacts">
                    <ul class="intro__contacts-list">
                        <li class="intro__contacts-list-item">
                            <a href="#" class="intro__contacts-link">
                                <svg width="14" height="14" aria-hidden="true" class="icon-contacts-1">
                                    <use xlink:href="#contacts-1"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="intro__contacts-list-item">
                            <a href="#" class="intro__contacts-link">
                                <svg width="14" height="14" aria-hidden="true" class="icon-contacts-2">
                                    <use xlink:href="#contacts-2"></use>
                                </svg>
                            </a>
                        </li>
                        <li class="intro__contacts-list-item">
                            <a href="#" class="intro__contacts-link">
                                <svg width="14" height="14" aria-hidden="true" class="icon-contacts-3">
                                    <use xlink:href="#contacts-3"></use>
                                </svg>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="intro__pagination">

                </div>
            </div>
        </div>
    </div>
</section>


<section class="spa">
    <div class="spa__image-wrapper">
        <div class="spa__parallax-wrapper">
            <img src="img/spa.jpg" alt="" class="spa__image">
        </div>
    </div>
    <div class="spa__main-wrapper">


        <div class="container">
            <div class="spa__content">
                <h2 class="spa__heading">
                    spa услуги
                </h2>
                <div class="spa__text">
                    <p>
                        У нас вы сможете насладиться авторскими и традиционными парениями, массажами, а также посетить
                        соляную комнату, хаммам, травяную бочку и другие зоны. Процедурные кабинеты рассредоточены по
                        территории,
                        поэтому SPA-услуги доступны посетителям всех разрядов.
                    </p>
                </div>
                <ul class="spa__list">
                    <li class="spa__list-item">
                        Парения
                    </li>
                    <li class="spa__list-item">
                        Пилинг
                    </li>
                    <li class="spa__list-item">
                        Массаж
                    </li>
                </ul>
                <a href="#" class="spa__link">
                    Все услуги
                </a>
            </div>
        </div>
    </div>
</section>
<section class="gallery">
    <div class="container">
        <div class="gallery__slider js-gallery-slider">
            <div class="swiper">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <div class="gallery__slider-card gallery__slider-card--type-1">
                            <img src="img/gallery/1.jpg" alt="" class="gallery__slider-card-image">
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="gallery__slider-card gallery__slider-card--type-2">
                            <img src="img/gallery/2.jpg" alt="" class="gallery__slider-card-image">
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="gallery__slider-card gallery__slider-card--type-3">
                            <img src="img/gallery/3.jpg" alt="" class="gallery__slider-card-image">
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="gallery__slider-card gallery__slider-card--type-1">
                            <img src="img/gallery/4.jpg" alt="" class="gallery__slider-card-image">
                        </div>
                    </div>
                    <div class="swiper-slide">
                        <div class="gallery__slider-card gallery__slider-card--type-2">
                            <img src="img/gallery/5.jpg" alt="" class="gallery__slider-card-image">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="subscribe">
    <div class="container">
        <div class="subscribe__content">
            <img src="img/image-logo.svg" alt="" class="subscribe__logo">
            <h4 class="subscribe__heading">
                Подписаться на рассылку
            </h4>
            <div class="subscribe__heading-text">
                <p>
                    Чтобы не пропустить классные акции и предложения
                </p>
            </div>
            <form action="/" method="POST" class="subscribe__form">
                <div class="subscribe__form-row">
                    <input type="email" name="email" class="subscribe__form-input" required="" placeholder="Email">
                    <button class="subscribe__form-submit" type="submit">
                        <svg width="14" height="14" aria-hidden="true" class="icon-arrow-right">
                            <use xlink:href="#arrow-right"></use>
                        </svg>
                    </button>
                </div>

            </form>
        </div>
    </div>
</section>


{{/content}}
{{/extend}}